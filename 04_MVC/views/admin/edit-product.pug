extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/form.css")
  link(rel="stylesheet", href="/css/product.css")

block content  
  main
    form.product-form(action=`/admin/${editing ? 'edit-product' : 'add-product'}` method='POST')
      .form-control
        label(for="title") Title
        input(type="text", name="title", value=`${editing ? product.title: ''}`)#title
      .form-control
        label(for="imageUrl") Image URL
        input(type="text", name="imageUrl", value=`${editing ? product.imageUrl : ''}`)#imageUrl
      .form-control
        label(for="price") Price
        input(type="number", step="0.01", name="price", value=`${editing ? product.price : ''}`)#price
      .form-control
        label(for="description") Description
        textarea(name="description", rows="5", value=`${editing && ''}`)#description
      button.btn(type="submit") #{editing ? 'Update Product' : 'Add Product'}